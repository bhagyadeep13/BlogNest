<% if (toastMessage) { %>
  <div id="toast"
       class="fixed top-5 right-5 z-50 px-6 py-4 rounded-lg shadow-lg transition-all duration-500 ease-in-out font-bold
              <% if (toastMessage.type === 'success') { %> bg-green-600 text-white <% } %>
              <% if (toastMessage.type === 'error') { %> bg-red-600 text-white <% } %>
              <% if (toastMessage.type === 'info') { %> bg-blue-600 text-white <% } %>">
    <%= toastMessage.text %>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const toast = document.getElementById("toast");

      // Auto-hide after 3 seconds
      setTimeout(() => {
        if (toast) {
          toast.style.opacity = '0';
          toast.style.transform = 'translateX(100%)';
        }
      }, 3000);
    });
  </script>
<% } %>