<%- include('../partials/head') %>
  </head>
  <body class="bg-gradient-to-br from-red-100 via-white to-red-200 min-h-screen">
    <%- include('../partials/nav') %>
    <%- include('../partials/toast') %>
    <main class="mt-10">
      <h2 class="text-4xl font-extrabold text-center text-red-600 mb-10 tracking-tight">
        Here are your favourites:
      </h2>
      <div class="flex flex-wrap justify-center gap-6">
        <% favouritePosts.forEach(post => { %>
          <div class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 w-full max-w-xs flex flex-col">
            <img src="<%= post.photo %>" alt="<%= post.title %>" class="w-full h-48 object-cover">
            <div class="p-4">
              <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= post.title %></h3>
              <p class="text-gray-600 mb-2"><%= post.authorName %></p>
              <div class="flex justify-between items-center mb-2">
                <span class="text-lg font-bold text-red-500"><%= post.category %> </span>
                <div class="flex items-center">
                    <span class="text-gray-700"><%= new Date(post.createdAt).toLocaleDateString() %></span>
                </div>
              </div>
              <form action="/favourites/delete/<%= post._id %>" method="POST">
                <button class="bg-red-300 hover:bg-red-500  p-2 rounded-lg type="submit">Remove from favourite</button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>
